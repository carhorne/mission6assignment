@{
}

@model List<Movie>

<table class="table table-striped table-hover table-bordered">
    <thead class=table-dark">
        <tr>
            <th>Category</th>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Lent To</th>
            <th>Copied to Plex</th>
            <th>Notes</th>
            <th colspan="2" class="text-center">Actions</th>  <!-- Make actions more prominent -->
        </tr>
    </thead>

    @foreach (var x in Model)
    {
        <tbody>
            <tr>
                <td>@x.Category.CategoryName</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@(x.Edited == 1 ? "Yes" : "No")</td>
                <td>@x.LentTo</td>
                <td>@(x.CopiedToPlex == 1 ? "Yes" : "No")</td>
                <td>@x.Notes</td>
                <td><a class="btn btn-info" href="@Url.Action("Edit", "Home", new { id = x.MovieId })">Edit</a></td>
                <td><a class="btn btn-danger" href="@Url.Action("Delete", "Home", new { id = x.MovieId })">Delete</a></td>

            </tr>
        </tbody>
    }
    
</table>