@{
    ViewData["Title"] = "Add a Movie";
}
@model Movie
<!-- form utilizing the values of the movie class-->
<h1>Enter a Movie:</h1>
<form asp-action="NewMovie" method="post">
    <br />
    <label asp-for="Category">Category: </label>
    <input asp-for="Category" />
    <span asp-validation-for="Category" class="text-danger"></span>
    <br />
    <br />
    <label asp-for="Title">Title: </label>
    <input asp-for="Title"/>
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <br />
    <label asp-for="Year">Year: </label>
    <input asp-for="Year"/>
    <span asp-validation-for="Year" class="text-danger"></span>
    <br />
    <br />
    <label asp-for="Director">Director: </label>
    <input asp-for="Director"/>
    <span asp-validation-for="Director" class="text-danger"></span>
    <br />
    <br />
    <label asp-for="Rating">Rating: </label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <br />
    <label asp-for="Edited">Edited? </label>
    <select asp-for="Edited">
        <option value="0">No</option>
        <option value="1">Yes</option>
	</select>
    <br />
    <br />
    <label asp-for="LentTo">Lent to: </label>
    <input asp-for="LentTo"/>
    <br />
    <br />
    <label asp-for="Notes">Notes: </label>
    <input asp-for="Notes" />
    <span asp-validation-for="Notes" class="text-danger"></span>
    <br />
    <button type="submit">Submit Movie</button>
</form>